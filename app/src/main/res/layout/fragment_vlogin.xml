<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.customers.LoginFragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo_img"
        android:src="@drawable/logo_hdpi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Log In"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/logo_img"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/title_text"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Email Address"
        android:id="@+id/cst_edt_mail"
        android:textSize="19sp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:textColor="#4396BA"
        android:textColorHint="#4396BA"
        android:drawableTint="#4396BA"
        android:background="@drawable/edt_bg"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:layout_below="@id/title_text"
        android:padding="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Password"
        android:inputType="textPassword"
        android:id="@+id/cst_edt_pass"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/edt_bg"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:layout_below="@id/cst_edt_mail"
        android:padding="8dp"
        android:textColor="#4396BA"
        android:textColorHint="#4396BA"
        android:drawableTint="#4396BA"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:background="@drawable/btn_bg"
        android:text="Login"
        android:id="@+id/cst_log_btn"
        android:layout_below="@id/cst_edt_pass"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="@null"
        android:textColor="#4396BA"
        android:elevation="8dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_below="@id/cst_log_btn"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account ? "
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textStyle="bold"
        android:textColor="#4396BA"
        android:layout_marginStart="8dp"
        android:textSize="17sp"
        android:id="@+id/create_acc_txt"/>
</LinearLayout>

</RelativeLayout>