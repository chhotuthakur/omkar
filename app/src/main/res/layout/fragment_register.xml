<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.customers.RegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo_img"
        android:src="@drawable/logo_hdpi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Register New Account "
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/logo_img"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/title_text"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Email Address"
        android:id="@+id/cst_edt_mail_reg"
        android:textSize="19sp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:textColor="#4396BA"
        android:textColorHint="#4396BA"
        android:drawableTint="#4396BA"
        android:background="@drawable/edt_bg"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:layout_below="@id/cst_edt_name_reg"
        android:padding="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Password"
        android:inputType="textPassword"
        android:id="@+id/cst_edt_pass_reg"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/edt_bg"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:layout_below="@id/cst_edt_mail_reg"
        android:padding="8dp"
        android:textColor="#4396BA"
        android:textColorHint="#4396BA"
        android:drawableTint="#4396BA"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Phone Number"
        android:inputType="textPassword"
        android:id="@+id/cst_edt_numb_reg"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/edt_bg"
        android:drawableStart="@drawable/ic_baseline_local_phone_24"
        android:layout_below="@id/cst_edt_pass_reg"
        android:padding="8dp"
        android:textColor="#4396BA"
        android:textColorHint="#4396BA"
        android:drawableTint="#4396BA"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Address"
        android:inputType="textPassword"
        android:id="@+id/cst_edt_addres_reg"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/edt_bg"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:layout_below="@id/cst_edt_numb_reg"
        android:padding="8dp"
        android:textColor="#4396BA"
        android:textColorHint="#4396BA"
        android:drawableTint="#4396BA"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Name"
        android:id="@+id/cst_edt_name_reg"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/edt_bg"
        android:drawableStart="@drawable/ic_baseline_people_alt_24"
        android:layout_below="@id/title_text"
        android:padding="8dp"
        android:textColor="#4396BA"
        android:textColorHint="#4396BA"
        android:drawableTint="#4396BA"
        android:layout_marginBottom="10dp"/>
<!--            <EditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="  Type"-->
<!--                android:id="@+id/cst_edt_name_type"-->
<!--                android:textSize="19sp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginStart="19dp"-->
<!--                android:layout_marginEnd="19dp"-->
<!--                android:background="@drawable/edt_bg"-->
<!--                android:drawableStart="@drawable/ic_baseline_people_alt_24"-->
<!--                android:layout_below="@id/cst_edt_addres_reg"-->
<!--                android:padding="8dp"-->
<!--                android:textColor="#4396BA"-->
<!--                android:textColorHint="#4396BA"-->
<!--                android:drawableTint="#4396BA"-->
<!--                android:layout_marginBottom="10dp" />-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/cst_edt_addres_reg"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:layout_marginStart="19dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="19dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/type_holder">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Type"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_weight="1"/>


            <Spinner
                android:id="@+id/chck_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"/>
</LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:background="@drawable/btn_bg"
        android:text="Create Account"
        android:textAllCaps="false"
        android:layout_below="@+id/type_holder"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="@null"
        android:textColor="#4396BA"
        android:textStyle="bold"
        android:elevation="8dp"
        android:id="@+id/cust_reg_btn"/>

<!--    android:textColor="#4396BA"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/cust_reg_btn"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ? "
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to Your Account"
            android:textStyle="bold"
            android:textColor="#4396BA"
            android:layout_marginStart="8dp"
            android:textSize="17sp"
            android:id="@+id/log_acc_txt"/>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>